function hasChanges() {
	test -n "$(git status -s .)"
}

function getRelease() {
	awk -F= '/^release=/{print $2}' .release
}

function getBaseTag() {
		sed -n -e "s/^tag=\(.*\)$(getRelease)\$/\1/p" .release
}

function getTag() {
	if [ -z "$1" ] ; then
		awk -F= '/^tag/{print $2}' .release
	else
		echo "$(getBaseTag)$1"
	fi
}

function setRelease() {
	if [ -n "$1" ] ; then
		sed -i.x -e "s/^tag=.*/tag=$(getTag $1)/" .release
		sed -i.x -e "s/^release=.*/release=$1/g" .release
		rm -f .release.x
		runPreTagCommand "$1"
	else
		echo "ERROR: missing release version parameter " >&2
		return 1
	fi
}

function runPreTagCommand() {
	if [ -n "$1" ] ; then
		COMMAND=$(sed -n -e "s/@@RELEASE@@/$1/g" -e 's/^pre_tag_command=\(.*\)/\1/p' .release)
		if [ -n "$COMMAND" ] ; then
			if ! OUTPUT=$(bash -c "$COMMAND" 2>&1) ; then echo $OUTPUT >&2 && exit 1 ; fi
		fi
	else
		echo "ERROR: missing release version parameter " >&2
		return 1
	fi
}

function tagExists() {
	tag=${1:-$(getTag)}
	test -n "$tag" && test -n "$(git tag | grep "^$tag\$")"
}

function differsFromRelease() {
	tag=$(getTag)
	! tagExists $tag || test -n "$(git diff --shortstat -r $tag .)"
}

function getVersion() {
	result=$(getRelease)
# TODO: For Future Use
#	if differsFromRelease; then
#		result="$result-$(git log -n 1 --format=%h .)"
#	fi

	if hasChanges -eq 1; then
	  result="$result-dirty"
  fi
  echo $result
}

function nextPatchLevel() {
	version=${1:-$(getRelease)}
	major_and_minor=$(echo $version | cut -d. -f1,2)
	patch=$(echo $version | cut -d. -f3)
	version=$(printf "%s.%d" $major_and_minor $(($patch + 1)))
	echo $version
}

function nextMinorLevel() {
	version=${1:-$(getRelease)}
	major=$(echo $version | cut -d. -f1);
	minor=$(echo $version | cut -d. -f2);
	version=$(printf "%d.%d.0" $major $(($minor + 1))) ;
	echo $version
}

function nextMajorLevel() {
	version=${1:-$(getRelease)}
	major=$(echo $version | cut -d. -f1);
	version=$(printf "%d.0.0" $(($major + 1)))
	echo $version
}

function getTagDescription(){
	awk -F= '/^tag_description=/{print $2}' .release
}

function createGitTag(){
	tag=$(awk -F= '/^tag=/{print $2}' .release)
	echo $tag
	description=$(getTagDescription)
	git tag -a "$tag" -m "$description"
}

function getSha(){
  tag=${1:-$(getTag)}
  tag=$tag
  images="$(docker images --format {{.Repository}}:{{.Tag}}:{{.Digest}})"
  sha=$(docker images --format {{.Repository}}_{{.Tag}}_{{.Digest}} | grep tmcprototype | grep $tag | awk -F_ '/nexus.engageska-portugal.pt/tango-example/tmcprototype_$tag_ {print $3}')
  echo $sha
}

function deleteImageFromNexus(){
  sha=$(getSha)
  result=$(curl -X "DELETE" -u ci-cd:ci-cd-pipeline-8237 https://nexus.engageska-portugal.pt/v2/tango-example/tmcprototype/manifests/$sha --verbose)
}

function gitPush() {
  tag=$(awk -F= '/^tag=/{print $2}' .release)
  echo $tag
  $(git push https://adityadangeska:qeFgyixVQE69zoYTnHHz@gitlab.com/ska-telescope/tmc-prototype.git "$tag")
  result=$(echo $?)
  if [ $result -ne 0 ];
  then
    deleteImageFromNexus
  fi
}

function getReleaseDescription(){
	awk -F= '/^release_notes=/{print $2}' .release
}

function releaseTMC() {
  name=$(getRelease)
  echo "$name"
  tag_name=$(getRelease)
  echo "$tag_name"
  release_notes=$(getReleaseDescription)
  echo "$release_notes"
  data1=('{ "name": "'$name'", "tag_name": "'$tag_name'", "description": "'"$release_notes"'"}')
  echo "$data1"
  result=$(curl --header 'Content-Type: application/json' \
                --header "PRIVATE-TOKEN: LmMeweawasu3MB-igzbx" \
                --data "$data1" \
                --request POST https://gitlab.example.com/api/v4/projects/10749136/releases)
  echo $result
}

function deleteTMCRelease() {
  tag_name=$(getRelease)
  echo "$tag_name"
  target="https://gitlab.com/api/v4/projects/10749136/releases/"$tag_name
  echo $target
  result=$(curl --request DELETE --header "PRIVATE-TOKEN: LmMeweawasu3MB-igzbx" "$target")
  echo $result
}

function releaseAlreadyExists() {
  tag_name=$(getRelease)
  result=$(curl --header "PRIVATE-TOKEN: LmMeweawasu3MB-igzbx" "https://gitlab.com/api/v4/projects/10749136/releases/""$tag_name" | \
  python3 -c "import sys, json; print(json.load(sys.stdin)['tag_name'])")
  echo "$result"
  if [ "$result" == "$tag_name" ]
  then
    echo "This release is already exists."
    echo "$msg"
  else
    msg="This release does not exists yet."
    echo "$msg"
  fi
}

function deleteTag() {
  tag=$(awk -F= '/^tag=/{print $2}' .release)
  echo $tag
  git push --delete https://adityadangeska:qeFgyixVQE69zoYTnHHz@gitlab.com/ska-telescope/tmc-prototype.git "$tag"
}

function releaseTMCWithoutError() {
  tag_name=$(getRelease)
  releaseExists=$(curl --header "PRIVATE-TOKEN: LmMeweawasu3MB-igzbx" "https://gitlab.com/api/v4/projects/10749136/releases/""$tag_name" | \
  python3 -c "import sys, json; print(json.load(sys.stdin)['tag_name'])")
  echo "$releaseExists"
  if [ "$releaseExists" == "$tag_name" ]
  then
    echo "This release is already exists."
  else
    echo "This release does not exist. Hence new release will be created."
    releaseTMC
    releaseExists=$(curl --header "PRIVATE-TOKEN: LmMeweawasu3MB-igzbx" "https://gitlab.com/api/v4/projects/10749136/releases/""$tag_name" | \
    python3 -c "import sys, json; print(json.load(sys.stdin)['tag_name'])")
    echo "$releaseExists"
    if [ "$releaseExists" != "$tag_name" ]; then
        echo "Error while releasing tmc. Tag and image will be deleted."
        deleteTag
        deleteImageFromNexus
    fi
  fi
}